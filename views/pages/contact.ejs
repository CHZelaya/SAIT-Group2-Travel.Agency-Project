<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Contact Page</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel="stylesheet" href="/static/css/style.css">
</head>

<body>
  <!-- Navigation links header -->
  <div class="container">
    <header class="d-flex justify-content-center py-3">
      <img src="/static/mainpagepics/logo.png" alt="Logo" class="logo">
      <ul class="nav nav-pills">
        <li class="nav-item"><a href="/" class="nav-link">Home</a></li>
        <li class="nav-item"><a href="/vacation" class="nav-link">Vacation Packages</a></li>
        <li class="nav-item"><a href="/contact" class="nav-link active" aria-current="page">Meet the Team</a></li>
        <li class="nav-item"><a href="/register" class="nav-link">Register Now</a></li>
      </ul>
    </header>
  </div>

  <div class="container px-4 py-5">
    <h2 class="pb-2 border-bottom">Meet the Travel Experts Team!</h2>

    <div class="row row-cols-1 row-cols-md-3 g-4 py-5">
      <% agents.forEach(agent => { %>
        <div class="col">
          <div class="d-flex flex-column align-items-center">
            <img src="/agents/<%= agent.firstName.toLowerCase() %>_<%= agent.lastName.toLowerCase() %>.jpg" class="img-fluid mb-3" alt="<%= agent.firstName %> <%= agent.lastName %>">
            <h4 class="fw-semibold mb-3"><%= agent.firstName %> <%= agent.lastName %></h4>
            <ul class="list-group w-100">
              <li class="list-group-item">Phone Number: <%= agent.busPhone %></li>
              <li class="list-group-item">Email: <%= agent.email %></li>
              <li class="list-group-item">Position: <%= agent.position %></li>
              <li class="list-group-item">Agency Phone: <%= agent.agencyPhone %></li>
              <li class="list-group-item">Address: <%= agent.address %>, <%= agent.city %>, <%= agent.province %>, <%= agent.postal %>, <%= agent.country %></li>
            </ul>
          </div>
        </div>
      <% }); %>
    </div>
    
  </div>

  <footer class="footer mt-auto py-3 bg-body-tertiary">
    <div class="container">
      <img src="/static/mainpagepics/logo.png" alt="Logo" class="logo">
      <span class="text-body-secondary">Travel Experts Copyright</span>
    </div>
  </footer>

</body>

</html>